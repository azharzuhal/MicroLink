        <Label text="Pekerjaan:" GridPane.rowIndex="11" />
        <TextField fx:id="pekerjaanField" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="11" />
        
        <Label text="Nama Perusahaan:" GridPane.rowIndex="12" />
        <TextField fx:id="namaPerusahaanField" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="12" />
        
